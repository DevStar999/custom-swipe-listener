<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cardinal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:onClick="gotoCardinalSwipeLayout"
        android:text="Goto Cardinal Swipe Layout"
        app:layout_constraintBottom_toTopOf="@id/diagonal_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/diagonal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:onClick="gotoDiagonalSwipeLayout"
        android:text="Goto Diagonal Swipe Layout"
        app:layout_constraintBottom_toTopOf="@id/cardinal_diagonal_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardinal_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cardinal_diagonal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:onClick="gotoCardinalAndDiagonalSwipeLayout"
        android:text="Goto All Directions Swipe Layout"
        app:layout_constraintBottom_toTopOf="@id/hex_mode_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diagonal_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hex_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:onClick="gotoHexModeSwipeLayout"
        android:text="Goto Hex Swipe Layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardinal_diagonal_button" />

</androidx.constraintlayout.widget.ConstraintLayout>